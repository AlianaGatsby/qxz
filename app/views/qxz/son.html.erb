<div>
	<%= link_to "index" do |i| %>
		<div class="container top_padding">
			<div class="row">
				<div class="col-xs-4">
					<%= image_tag   @imgs["#{3}"] , class:"img_size" %>
				</div>
				<div class="col-xs-8">
					<div>成人感冒气象风险</div>
					<div class="row">
						<% (1..5).each do |int| %>
							<div class="col-xs-15 align lump <%= @lump["#{int}"] %>"><%= @lump["#{int+6}"] %></div>
						<% end %>
					</div>
				</div>
			</div>
			<hr class="border_color" />
			<div class="container">
				<div class="row">
					<div class="col-xs-12 transparent">
						<div class="col-xs-12">
							<div class="col-xs-2">明天</div>
							<div class="col-xs-10">
								<div class="row">
									<% (1..5).each do |int| %>
										<div class="col-xs-15  lump 
										<%= 
										int==3 ? @lump["#{3}"] : @lump["#{6}"]
										%> 
										lump_air_size">
										</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>